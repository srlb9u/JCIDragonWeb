// fixed side navigation with dots
.fixed-side-navbar 
  position: fixed;
  top: 50%;
  right: 0;
  z-index: 99999;
  margin-top: -100px;
  text-align: right;
  transition: all .3s;
  
  &:hover  // component hovering
    background: white;
    box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.2);
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    
    .nav > li > a > span 
      //animation: fadeInRight .4s;
      color: fade(dot-col1, 50%);
      display: block;
    
  
  
  .nav > li 
    &.active 
      a 
        background-color: transparent;
        color: dot-col1;
        &:after 
          transform: scale(0.9);
        
        &:before 
          content: '';
          position: absolute;
          top: 50%;
          right: 17px;
          margin-top: -8px;
          width: 16px;
          height: 16px;
          background: transparent;
          border: 2px solid dot-col1;
          border-radius: 10px;
        
      
    
    a 
      color: dot-col1;
      min-height: 32px;
      background: transparent;
      padding: 5px 45px 5px 25px;
      //border: 1px solid transparent;
      border-right: none;

      span  // link text
        display: none;
        transition: all .2s;
      
      
      &:after  // side dot
        content: '';
        position: absolute;
        top: 50%;
        right: 20px;
        margin-top: -5px;
        width: 10px;
        height: 10px;
        border-radius: 10px;
        background: fade(dot-col1, 60%);
        //border: 1px solid dot-col1;
        transition: all .3s;
        transform: scale(0.6);
      
      &:hover 
        background-color: transparent;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        border-color: dot-col1;
        boder-right: 0;
        
        > span 
          //animation: fadeInRight .2s;
          color: dot-col1;
          display: block;
        
      
    
  


