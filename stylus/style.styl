@import nib
@import "fontawesome/index.styl"

// **********
// VARS
// **********


$phi = 1.618

$golden_major = 0.618
$golden_minor = 0.382

$base_font_size = 16
$px = ( 1 / $base_font_size ) rem

$inner = (1920*$golden_major)

$JCIBlue = #0098D8
// **********
// FUNCTIONS
// **********


step($start, $steps, $multiplier = $start, $unit="none")
	for i in (1..$steps)
		$start = $start*$multiplier
	if $unit != "none"
		unit($start, $unit)
	else
		$start

percent($num)
	unit($num * 100, '%')

rspn-width(NUM)
	max-width 61.8%//unit( NUM * $px, rem )
	width 100%
	margin-left auto
	margin-right auto

